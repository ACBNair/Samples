<Window x:Class="IdentityTest.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IdentityTest.WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Height="40" Width="80" Click="Button_Click">Login</Button>
        <Button Height="40" Width="80" Click="ButtonRefresh_Click">RefreshToken</Button>
        <Line />
        <TextBlock x:Name="Result"></TextBlock>
        <Line />
        <TextBlock x:Name="Detailed"></TextBlock>
        
        <Button Height="40" Width="80" Click="ButtonApi_Click">Call Api</Button>
        <TextBlock x:Name="Api"></TextBlock>
    </StackPanel>
</Window>
